.arrow-right {
    content: '';
    position: absolute;
    right: 12px;
    bottom: 16px;
    border: 5px solid transparent;
    border-left: 5px solid var(--color__silver);
    &:after {
        content: '';
        position: absolute;
        right: -3px;
        bottom: -5px;
        border: 5px solid transparent;
        border-left: 5px solid var(--color__white);
    }
}
